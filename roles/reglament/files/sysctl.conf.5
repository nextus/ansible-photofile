net.ipv4.conf.default.rp_filter=1
net.ipv4.conf.default.accept_source_route=0

#on router - disable
net.ipv4.conf.all.send_redirects=0
net.ipv4.ip_forward=0

kernel.sysrq=0
kernel.core_uses_pid=1
kernel.msgmnb=65536
kernel.msgmax=65536
kernel.shmmax=131212254720
kernel.shmall=130212254720
net.ipv4.ip_conntrack_max=1048576
net.ipv4.tcp_max_syn_backlog=8192
net.core.rmem_max=33554432
net.core.wmem_max=33554432
net.ipv4.tcp_rmem=4096 87380 16777216
net.ipv4.tcp_wmem=4096 65536 16777216
net.core.somaxconn=4096
net.ipv4.ip_local_port_range=1025 65535
net.ipv4.tcp_max_tw_buckets=400000
net.ipv4.tcp_fin_timeout=10
net.ipv4.tcp_retries2=5
kernel.panic=5

#not affect, default value
net.ipv4.tcp_tw_recycle=0

#default value
#not save metric from ip in cache
#enable if big sys LA ?
#https://news.ycombinator.com/item?id=1740823
net.ipv4.tcp_no_metrics_save=0

#default value
#dynamicaly tcp buffers (see tcp_rmem, tcp_wmem)
#disable if big sys LA ?
#https://news.ycombinator.com/item?id=1740823
net.ipv4.tcp_moderate_rcvbuf=1

#see https://www.kernel.org/doc/Documentation/networking/ip-sysctl.txt
#enable ONLY in time of ddos attack
net.ipv4.tcp_syncookies=0

#bug in big and cubig algoritm in redhat kernels 
net.ipv4.tcp_congestion_control=htcp

#low swapping if exist free memory
#swapping only leek not using memory
#vm.swappiness=20

#tunning
net.core.netdev_max_backlog=5000

#default - 5
net.ipv4.tcp_synack_retries=2
net.ipv4.tcp_syn_retries=3

#enable on gigabit speeds
net.ipv4.tcp_timestamps=1

#KeepAlive connections
net.ipv4.tcp_keepalive_time=120
net.ipv4.tcp_keepalive_probes=4
net.ipv4.tcp_keepalive_intvl=15

#enable if use bind to nonexistent address
#net.ipv4.ip_nonlocal_bind=1

#see http://forum.nginx.org/read.php?21,42139,42197
net.ipv4.netfilter.ip_conntrack_tcp_be_liberal=1

#20-30% speed of nginx for small static images
net.ipv4.tcp_slow_start_after_idle=0

#core dump path
kernel.core_pattern=/www/tmp/%e.%p.%t.core

